<%- layout('layout/basicTemplate') %>
    <div id="map" style="width: 100%; height: 500px" class="mt-3"></div>
    <h1>List of all hotels</h1>
    <% for(let hot of list) {%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <img src="<%= hot.image[0].url %>" alt="" class="img-fluid">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= hot.name %>
                        </h5>
                        <p class="card-text">
                            <%= hot.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= hot.location %>
                            </small>
                        </p>
                        <a href="/hotels/<%= hot._id %>" class="btn btn-primary">View <%= hot.name %></a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>
            <script>
                const mapToken = '<%- process.env.mapbox_token %>'
                const list = { features:<%- JSON.stringify(list) %>}
            </script>
            <script src="javascript/clusterMap.js"></script>